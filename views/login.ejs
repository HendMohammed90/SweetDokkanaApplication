  <body>
<div class="container-fluid">
    <div class="row">
        <div class="content d-flex align-items-center">
            <div class="row w-100">
                <div class="col-lg-4 mx-auto">
                    <div class="form text-left p-5">
                        <div class="row text-center">
                          <div class="col-6">
                              <h2 id="login">login</h2>
                          </div>
                          <div class="col-6">
                            <a href="/api/users/singup"><h2>Sign UP</h2></a>
                          </div>
                        </div>
                        <form class="pt-5" method="POST" action="/api/users">
                          <% include partials/messages.ejs %>  
                          <div class="form-group">
                                <label for="Email">Email</label>
                                <input type="email" class="form-control" id="Email" name="Email" placeholder="Username">
                            </div>
                            <div class="form-group">
                                <label for="Password">Password</label>
                                <input type="Password" class="form-control" id="Password" name="Password" placeholder="Password">
                            </div>
                            <div class="mt-5">
                                <button class="btn btn-block btn-warning btn-lg font-weight-medium"  type="supmit">Login</button>
                            </div>
                            <div class="mt-3 text-center">
                                <a href="/forgot_password." class="auth-link text-white">Forgot password?</a>
                            </div>                 
                            <div class="mt-3 text-center">
                              <%if (data){%>
                                <span id="Error-Message"><%=data%></span>
                              <%}%>
                            </div>
                        </form>
                    </div>
