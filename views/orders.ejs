    <!-- start table of content -->
   <!--Start orders table -->
   <section id="orders" class="py-5">
        <div class="container">
            <h3>all orders</h3>
            <p class="text-muted">please chose the order lines to be Viewed </p>
            <div class="row">
                <% if(orders.length>0){%>
                <table class="table table-striped text-center">
                <thead>
                    <tr>
                        <th>order Name</th>
                        <th>Order-date</th>
                        <th class="hidden-xs">City</th>
                        <th class="hidden-xs">Address</th>
                        <th>Price</th>
                        <th class="hidden-xs">Phone</th>
                        <th>status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach((order ,index)=>{ %>
                        <tr>
                            <th scope="row"><%= order.Name %></th>
                            <td scope="row"><%= order.OrderDate.toDateString()%></td>
                            <td scope="row"><%= order.City %></td>
                            <td scope="row"><%= order.Address %></td>
                            <td scope="row"><%= order.OrderPrice %>$</td>
                            <td scope="row"><%= order.Phone %></td>
                            <td>
                                <a class="badge badge-success " id="action">Done</a>
                            </td>
                            <td>
                                <a href="/api/orders/details/<%=order._id%>" class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="" data-original-title="View"><i class="fas fa-eye" style="color:black"></i>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            <%}else {%>
                <p class="text-center">No orders found in the database the database  ^_-</p>
            <%}%>
            </div>
            <div class="row mt-4">
                    <nav class="justify-content-end">
                        <ul class="pagination pagination-info mb-0">
                        <%for (let i=1 ;i<=Math.ceil(total/5);i++){%>
                            <%if (pageNo==i){%>
                                <li class="page-item active"><a class="page-link" href="<%= '/api/orders/' + i%>"><%=i%></a></li>
                            <%}else{%>
                                <li class="page-item "><a class="page-link" href="<%= '/api/orders/' + i%>"><%=i%></a></li>
                            <%}%>
                        <%}%>
                        
                        </ul>
                    </nav>
                </div>
        </div>
</section>
