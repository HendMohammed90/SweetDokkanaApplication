<body>
<% include partials/navigation.ejs%>
<!-- start admin info section -->
<section id="admin-info">
        <div class="container">
            <div class="row p-5">
                <div class="col-lg-6 col-sm-12">
                    <% if (message!= ""){%>
                        <%=message%>
                    <%}%>
                    <form class="info-form">
                        <h2>Personal Information:</h2>
                        <label for="name">ID :</label>
                        <p class="d-inline"><%= ID %></p>
                        <br />
                        <label for="name">Name :</label>
                        <p class="d-inline"><%= name %></p>
                        <br />
                        <label for="email">email :</label>
                        <p class="d-inline"><%= Email %></p>
                        <br />
                        <label for="name">Admin :</label>
                        <p class="d-inline"><%= isAdmin %></p>
                        <br />
                        <label for="name">password :</label>
                        <p class="d-inline"> **********</p>
                        <br />
                        <div class="col-12 pt-5">
                            <a class="btn btn-info  btn-block edit mt-5 ">edit</a>
                        </div>
                    </form>
                </div>
                <div class="col-lg-6 col-sm-12 p-3 border-left">
                    <img src="../../assets/imgs/profileImg.svg" class="img-fluid" alt="admin-img">
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                <form class="edit-form" method="POST" enctype="multipart/form-data" action="/api/home/me">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Username">
                    </div>
                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input type="email" class="form-control" id="Email" name="Email" placeholder="Email">
                    </div>
                    <!-- <div class="form-group">
                        <label for="Password">Password</label>
                        <input type="password" class="form-control" id="Password" name="Password" placeholder="Password">
                    </div> -->
                    <div class="form-group" style="font-size: 19px;font-weight: 800;">
                        <label>Is Admin</label><br>
                        <input type="radio" name="isAdmin" value="true">True<br>
                        <input type="radio" name="isAdmin" value="false">False<br>
                    </div>
                    <br>
                    <br>
                    <br>
                    <div class="mt-5">
                        <button class="btn btn-block btn-warning btn-lg font-weight-medium" value="supmit"  type="supmit">Join</button>   
                    </div> 
                    
                </form>
            </div>
        </div>
    </div>
</section>
<!-- end admin info section -->



