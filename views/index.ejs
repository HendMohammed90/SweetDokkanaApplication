                        <td scope="row"><%= order.City %></td>
                        <td scope="row"><%= order.Address %></td>
                        <td scope="row"><%= order.OrderPrice %>$</td>
                        <td scope="row"><%= order.Phone %></td>
                        <td>
                            <a class="badge badge-success " id="action">Done</a>
                        </td>
                        <td>
